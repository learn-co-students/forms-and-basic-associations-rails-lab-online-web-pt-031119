<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %><br>
  <%= f.text_field :artist_name %>
  <br />

  <label for="song_genre_id">Genre</label><br>
  <select name="song[genre_name]" id="song_genre_id">
    <% @genres.each do |genre| %>
      <option value="<%= genre.name %>"><%= genre.name %></option>
    <% end %>
  <br>
  <br>
  <input type="text" id="song_notes_1" name="song[note_contents][]">
  <br>
  <input type="text" id="song_notes_2" name="song[note_contents][]">
  
  <br>
  <%= f.submit %>

<% end %>